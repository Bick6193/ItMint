<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Chart Application</title>

    @*<style>
        body.preloader {
            background: #3e6486 url('Content/cg/images/background.jpg') no-repeat no-repeat 0 0;
            background-size: cover;
        }

        @@media only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min--moz-device-pixel-ratio: 2), only screen and (-o-min-device-pixel-ratio: 2/1), only screen and (min-device-pixel-ratio: 2), only screen and (min-resolution: 192dpi), only screen and (min-resolution: 2dppx) {
            /* Retina-specific stuff here */
            body.preloader {
                background: #3e6486 url('Content/cg/images/retina-background.jpg') no-repeat no-repeat 0 0;
                background-size: cover;
            }
        }

        .noselect {
            -webkit-touch-callout: none; /* iOS Safari */
            -webkit-user-select: none; /* Chrome/Safari/Opera */
            -khtml-user-select: none; /* Konqueror */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* IE/Edge */
            user-select: none; /* non-prefixed version, currently not supported by any browser */
        }

        /*mouse lock style*/

        body.busy, body.busy input { cursor: wait !important; }

        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1000;
        }

        #preloader > div {
            display: block;
            position: relative;
            left: 50%;
            top: 50%;
            width: 150px;
            height: 150px;
            margin: -75px 0 0 -75px;
            border-radius: 50%;
            border: 3px solid transparent;
            border-top-color: #FFFFFF;
            transform: translateZ(0);
            animation: spin 2s linear infinite;
        }

        #preloader > div:before {
            content: "";
            position: absolute;
            top: 5px;
            left: 5px;
            right: 5px;
            bottom: 5px;
            border-radius: 50%;
            border: 3px solid transparent;
            border-top-color: #FFFFFF;
            -webkit-animation: spin 3s linear infinite;
            animation: spin 3s linear infinite;
        }

        #preloader > div:after {
            content: "";
            position: absolute;
            top: 15px;
            left: 15px;
            right: 15px;
            bottom: 15px;
            border-radius: 50%;
            border: 3px solid transparent;
            border-top-color: #FFFFFF;
            animation: spin 1.5s linear infinite;
        }

        @@-webkit-keyframes spin {
            0% { transform: rotate(0deg); }

            to { transform: rotate(1turn); }
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }

            to { transform: rotate(1turn); }
        }

        @@-moz-keyframes spin {
            0% { transform: rotate(0deg); }

            to { transform: rotate(1turn); }
        }

        #offline {
            display: none;
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 1000;
            top: 0;
        }

        #offline div.offline-background {
            width: 100%;
            height: 100%;
            opacity: 0.6;
            position: absolute;
            background: black;
            transition: opacity 0.8s !important;
        }

        #offline div.offline-message {
            position: relative;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            max-width: 420px;
        }

        #offline div.offline-message img {
            animation: spin 1.5s linear infinite;
            margin: 0 auto;
            display: block;
            box-shadow: 0 0 24px #ffffff;
            border-radius: 24px;
        }

        #offline div.offline-message div {
            font-size: 11pt;
            font-weight: bold;
            margin-top: 30px;
            text-align: center;
        }

        .profiler-results.profiler-left.profiler-no-controls { display: none; }
    </style>*@

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>

    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->

    <script src="/lib/core-js/client/shim.min.js"></script>
    <script src="/lib/zone.js/dist/zone.js"></script>
    <script src="/lib/systemjs/dist/system.src.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="/lib/systemjs.config.js"></script>
    <script>
        System.import('/js/main.js').catch(function(err) { console.error(err); });
    </script>


</head>
<body class="preloader">

<div id="preloader">
    <div></div>
</div>
<div application style="height: 100%; max-height: 100%"></div>
<div id="offline">
    <div class="offline-background"></div>
    <div class="offline-message">
        <img src="Content/cg/images/saving.png"/>
        <div>The connection has been lost, attempting to reconnect...</div>
    </div>

</div>

@RenderBody()

@RenderSection("Scripts", required: false)

</body>
</html>
